<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asusx453sa.muhammadridwan_120215421_modul2.MenuUtama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/taragaksanwich" />

        <TextView
            android:id="@+id/pilihmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Pilih Menu" />

<RadioGroup
    android:id="@+id/grupradio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButton_DineIn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="Dine In" />

        <RadioButton
            android:id="@+id/radioButton_TakeAway"
            android:layout_marginLeft="140dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Take Away" />


        <Button
            android:id="@+id/button_pesansekarang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
          android:layout_marginLeft="90dp"
            android:text="Pesan Sekarang" />
</RadioGroup>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
